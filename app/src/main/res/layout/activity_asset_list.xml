<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoadListActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/DarkBlue">

        <TextView
            android:id="@+id/assetList_equipmentIDText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textAllCaps="true"
            android:padding="10dp"
            android:textSize="25sp"
            android:textColor="@color/White"
            android:text="Equipment ID"/>

        <TextView
            android:id="@+id/assetList_certificationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Certification"
            android:textAllCaps="true"
            android:padding="10dp"
            android:textSize="25sp"
            android:textColor="@color/White"
            android:layout_marginStart="210dp"/>



    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/assetList_equipmentIDText"
            >

        </android.support.v7.widget.RecyclerView>


    </LinearLayout>


</LinearLayout>